                <% }) %>
              </select>
          <div class="modal-footer">
                  <input type="submit" class="btn btn-primary"  name="kirim" value="Kirim">
              </form>
              <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
          </div>
      </div>
